manifest {
    name = 'Camila Sao Paulo analysis'
    description = "Workflow for the the Camila Sao Paulo analsis"
    version = '0.1.0'
    author = 'Abhinav Sharma <abhi18av@outlook.com>; Emilyn Costa Conceição <emilyncosta@outlook.com>'
    mainScript = 'main.nf'
    defaultBranch = 'master'
}


profiles {

    standard {
        docker.enabled = true

        process {
            errorStrategy = 'ignore'
            withName:
            ".*" {
                cpus = 8
                memory = "15 GB"
            }
            withName:
            "FASTQC" {
                container = 'quay.io/biocontainers/fastqc:0.11.9--0'
                cpus = 4
                memory = "8 GB"
            }
            withName:
            "MULTIQC" {
                container = 'quay.io/biocontainers/multiqc:1.9--pyh9f0ad1d_0'
                cpus = 4
                memory = "8 GB"
            }
            withName:
            "PROKKA" {
                container 'quay.io/biocontainers/prokka:1.14.6--pl526_0'
                cpus 8
                memory "15 GB"
            }




        }

    Davi {
        process {
            errorStrategy = 'ignore'
            withName:
            ".*" {
                cpus = 2
                memory = "2 GB"
            }
        }

    }

    aws_batch {
        aws.client.uploadMaxThreads = 4
    }

    google_cloud_life_sciences {
        process.executor = 'google-lifesciences'
        workDir = 'gs://camila-sao-paolo-bucket/work'
        google.region  = 'us-central1'
        google.project = 'camila-sao-paolo'
        errorStrategy = 'retry'
        maxRetries = 2

        process {
            withName:
            UNICYCLER {
                cpus = 8
                memory = '16 GB'
            }
        }
    }
}

